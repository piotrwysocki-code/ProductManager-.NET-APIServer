@model IQueryable<Product>

@{
    Layout = "_Layout";
    ViewBag.Title = "PW_3";
}

<form id="addform" asp-action="addProduct" method=post>
    <div class="form-group">
        <label for="ProductId">ID: </label>
        <input class="form-control" name="ProductId">
    </div>
    <div class="form-group">
        <label for="ProductName">Name: </label>
        <input class="form-control" name="ProductName">
    </div>
    <div class="form-group">
        <label for="Price">Price: </label>
        <input class="form-control" name="Price">
    </div>
    <div class="form-group">
        <label for="CategoryId">Category(number 1 or 2): </label>
        <input class="form-control" name="CategoryId">
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-primary">Add Product</button>
    </div>
</form>

<table class="table table-bordered table-striped m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>$@item.Price</td>
                <td>@item.CategoryId</td>
            </tr>
        }
    </tbody>
</table>