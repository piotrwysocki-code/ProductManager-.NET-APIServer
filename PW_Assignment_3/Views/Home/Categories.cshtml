@model IQueryable<Category>

@{
    Layout = "_Layout";
    ViewBag.Title = "PW_3";
}

<form id="addform" asp-action="addCategory" method=post>
    <div class="form-group">
        <label for="CategoryId">ID: </label>
        <input class="form-control" name="CategoryId">
    </div>
    <div class="form-group">
        <label for="CategoryName">Name: </label>
        <input class="form-control" name="CategoryName">
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-primary">Add Category</button>
    </div>
</form>

<table class="table table-bordered table-striped m-2">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
            </tr>
        }
    </tbody>
</table>