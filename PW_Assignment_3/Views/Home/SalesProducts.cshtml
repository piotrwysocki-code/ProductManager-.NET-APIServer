@model IQueryable<SalesProd>

@{
    Layout = "_Layout";
    ViewBag.Title = "PW_3";
}

<form id="addform" asp-action="addSalesProduct" method=post>
    <div class="form-group">
        <label for="SaleId">Sale ID: </label>
        <input class="form-control" name="SaleId" required>
    </div>
    <div class="form-group">
        <label for="ProductId">Product ID: </label>
        <input class="form-control" name="ProductId">
    </div>
    <div class="form-group">
        <label for="Quantity">Quantity: </label>
        <input class="form-control" name="Quantity">
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-primary">Add Product</button>
    </div>
</form>

    <table class="table table-bordered table-striped m-2">
        <thead>
            <tr>
                <th>Sale ID</th>
                <th>Product ID</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.SaleId </td>
                    <td> @item.ProductId </td>
                    <td> @item.Quantity </td>
                </tr>
            }
        </tbody>
    </table>
