@model IQueryable<Employee>

@{
    Layout = "_Layout";
    ViewBag.Title = "PW_3";
}

<form id="addform" asp-action="addEmployee" method=post>
    <div class="form-group">
        <label for="EmployeeId">ID: </label>
        <input class="form-control" name="EmployeeId" required>
    </div>
    <div class="form-group">
        <label for="DeptId">Dept. ID: </label>
        <input class="form-control" name="DeptId" required>
    </div>
    <div class="form-group">
        <label for="LastName">Last Name: </label>
        <input class="form-control" name="LastName">
    </div>
    <div class="form-group">
        <label for="FirstName">First Name: </label>
        <input class="form-control" name="FirstName">
    </div>
    <div class="form-group">
        <label for="Salary">Salary: </label>
        <input class="form-control" name="Salary">
    </div>
    <div class="form-group">
        <label for="City">City: </label>
        <input class="form-control" name="City">
    </div>
    <div class="form-group">
        <label for="Province">Province: </label>
        <input class="form-control" name="Province">
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-primary">Add Employee</button>
    </div>
</form>

    <table class="table table-bordered table-striped m-2">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>DeptId</th>
                <th>Last Name</th>
                <th>first Name</th>
                <th>Salary</th>
                <th>City</th>
                <th>Province</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.employeeId</td>
                <td>@item.deptId</td>
                <td>@item.lastName</td>
                <td>@item.firstName</td>
                <td>@item.salary</td>
                <td>@item.city</td>
                <td>@item.province</td>
            </tr>
            }
        </tbody>
    </table>
